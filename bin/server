#!/bin/sh

cd $(dirname $0)/..

echo RUNNING in `pwd`
dir=$(pwd)

priv=${dir}/db/cert/jrc_prime256v1.key
cert=${dir}/db/cert/jrc_prime256v1.crt
#priv=${dir}/run/certs/private/webserver.key.pem
#cert=${dir}/run/certs/certs/webserver.cert.pem

# strace -ff -o/tmp/puma
# puma -b "ssl://[::]:8081?key=${priv}&cert=${cert}&ssl_cipher_list=ECDHE-ECDSA-AES256-SHA" --control-url "auto" --control-token=securehomegateway

bundle exec thin start --ssl \
  --address ::  \
  --port    8443  \
  --ssl-cert-file ${cert} \
  --ssl-key-file  ${priv} "$@"




