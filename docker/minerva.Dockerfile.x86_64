FROM mcr314/minerva_ruby_openssl:v202004 as builder

WORKDIR /app

# install gems with extensions explicitely so that layers are cached.
RUN gem install -v1.10.1 nokogiri --source=http://rubygems.org && \
    gem install -v1.2.7 eventmachine --source=http://rubygems.org && \
    gem install -v2.3.1 nio4r --source=http://rubygems.org && \
    gem install -v3.1.12 bcrypt --source=http://rubygems.org && \
    gem install -v1.10.0 ffi --source=http://rubygems.org && \
    gem install -v0.21.0 pg --source=http://rubygems.org && \
    gem install -v1.7.2 thin --source=http://rubygems.org && \
    gem install -v0.1.3  websocket-extensions --source=http://rubygems.org && \
    gem install -v0.5.9.3 cbor --source=http://rubygems.org
RUN gem install -v1.3.13 sqlite3 --source=http://rubygems.org
ADD ./docker/Gemfile /app/fountain/Gemfile
ADD ./docker/Gemfile.lock /app/fountain/Gemfile.lock

WORKDIR /app/fountain
RUN bundle config setup system true
RUN bundle install --no-deployment --gemfile=/app/fountain/Gemfile && \
    bundle check

# install items for use in debugging
RUN apt-get install -y strace

RUN rm -f /app/fountain/tmp/pids/server.pid && \
    rm -f /app/fountain/config/{config,database,secret}.yml && \
    rm -f /app/fountain/config/initializers/acme.rb && \
    rm -f /app/fountain/config/environments/production.rb

